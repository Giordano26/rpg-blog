<div class="post-page">
  <article>
    <header class="post-header">
      <h1><%= @blog_post.title %></h1>
      <div class="post-meta">
        <span>Publicado em <%= l @blog_post.date, format: :long %></span><br>
        <% if @blog_post.categories.any? %>
          <span>Categorias: <%= @blog_post.categories.join(', ') %></span><br>
        <% end %>
        <% if @blog_post.tags.any? %>
          <span>Tags: <%= @blog_post.tags.join(', ') %></span>
        <% end %>
      </div>
    </header>
    
    <% if @blog_post.has_downloads? %>
      <div class="download-section alert alert-info mb-4">
        <h5>Downloads Dispon√≠veis</h5>
        <div class="download-buttons">
          <% @blog_post.download_files.each do |file| %>
            <%= link_to blog_post_download_path(@blog_post, file['filename']), 
                class: "btn btn-outline-primary me-2 mb-2 d-inline-flex align-items-center",
                title: "Download #{file['name']}" do %>
               üìÅ <%= file['name'] %>
              <small class="ms-2 text-muted">(<%= format_file_size(file['size']) %>)</small>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
    
   <div class="post-content">
    <%= process_blog_content(@blog_post.body) %>
   </div>
  </article>
</div>
